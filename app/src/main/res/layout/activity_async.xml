<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="myfiles.adfree.filemanager.esfilexplorer.managefileslocally.Activity.AsyncActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        app:lottie_autoPlay="true"
        android:layout_centerInParent="true"
        app:lottie_fileName="radar_scanning.json"
        app:lottie_loop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Analyzing in process..."
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/lottieAnimationView"
        android:textColor="#000"
        android:textSize="@dimen/_15sdp"
         />

</RelativeLayout>