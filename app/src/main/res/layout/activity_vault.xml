        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp">

        <RelativeLayout
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp">

            <RelativeLayout
                android:background="@drawable/drawer_shape"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:padding="@dimen/_10sdp"
                    android:id="@+id/card5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_55sdp"
                    android:background="@drawable/my_gradient_drawable"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_marginVertical="@dimen/_5sdp">

                        <LinearLayout
                            android:id="@+id/m2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:scaleType="centerCrop"
                                android:background="@drawable/white_bg"
                                android:id="@+id/proImg"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"/>

                            <TextView
                                android:maxLines="2"
                                android:layout_gravity="center_vertical"
                                android:id="@+id/proName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:text="Image Name"
                                android:textColor="#FFFFFF"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginVertical="@dimen/_3sdp"
                            android:layout_below="@id/m2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/m3"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Size :"
                                android:textColor="#FFFFFF"
                                android:textSize="@dimen/_12sdp" />
                            <TextView
                                android:layout_marginLeft="@dimen/_40sdp"
                                android:id="@+id/proSize"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="100"
                                android:textColor="#FFFFFF"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginVertical="@dimen/_3sdp"
                            android:layout_below="@id/m3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/l4"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Modified :"
                                android:textColor="#FFFFFF"
                                android:textSize="@dimen/_12sdp" />
                            <TextView
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:id="@+id/proDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="100"
                                android:textColor="#FFFFFF"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginVertical="@dimen/_3sdp"
                            android:layout_below="@id/l4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Path :"
                                android:textColor="#FFFFFF"
                                android:textSize="@dimen/_12sdp" />
                            <TextView
                                android:layout_marginLeft="@dimen/_38sdp"
                                android:id="@+id/proPath"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="100"
                                android:textColor="#FFFFFF"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>


                    </RelativeLayout>

                </RelativeLayout>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/proOk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card5"
                    android:layout_marginVertical="@dimen/_15sdp"
                    android:layout_marginHorizontal="@dimen/_30sdp"
                    app:cardBackgroundColor="@color/btnColor"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/text4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/_5sdp"
                            android:paddingHorizontal="@dimen/_20sdp"
                            android:text="Ok"
                            android:layout_centerHorizontal="true"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/_13sdp" />
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>


            </RelativeLayout>


        </RelativeLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="@dimen/_50sdp"
               app:srcCompat="@drawable/property"
                android:layout_height="@dimen/_50sdp"/>


            <TextView
                android:layout_marginVertical="@dimen/_5sdp"
                android:layout_gravity="center"
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Property"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp"
                android:layout_below="@id/img1"/>

        </LinearLayout>

    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>