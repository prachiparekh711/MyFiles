                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tabtextColor"
                    android:text="Select all"
                    android:textSize="@dimen/_14sdp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_below="@id/selectAllC4"
                android:layout_marginVertical="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:id="@+id/deSelectAllC4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                   app:srcCompat="@drawable/ic_select_all"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tabtextColor"
                    android:text="Deselect all"
                    android:textSize="@dimen/_14sdp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginVertical="@dimen/_5sdp"
                android:layout_below="@id/deSelectAllC4"
                android:layout_marginRight="@dimen/_10sdp"
                android:id="@+id/vaultC4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                   app:srcCompat="@drawable/ic_out_vault" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tabtextColor"
                    android:text="Move out of vault"
                    android:textSize="@dimen/_14sdp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginVertical="@dimen/_5sdp"
                android:layout_below="@id/vaultC4"
                android:layout_marginRight="@dimen/_10sdp"
                android:id="@+id/infoC4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                   app:srcCompat="@drawable/ic_option5_blue"
                    android:id="@+id/opt5"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tabtextColor"
                    android:text="File Info"
                    android:textSize="@dimen/_14sdp"/>
            </LinearLayout>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:visibility="gone"
        android:background="@color/white"
        android:layout_marginTop="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:elevation="@dimen/_10sdp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginVertical="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginVertical="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:id="@+id/deSelectAllC2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                   app:srcCompat="@drawable/ic_select_all"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tabtextColor"
                    android:text="Deselect all"
                    android:textSize="@dimen/_14sdp"/>
            </LinearLayout>



            <LinearLayout
                android:layout_marginVertical="@dimen/_5sdp"
                android:layout_below="@id/deSelectAllC2"
                android:layout_marginRight="@dimen/_10sdp"
                android:id="@+id/vaultC2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                   app:srcCompat="@drawable/ic_out_vault"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tabtextColor"
                    android:text="Move out of vault"
                    android:textSize="@dimen/_14sdp"/>
            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <RelativeLayout
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/lock"
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
           app:srcCompat="@drawable/tool1"/>

        <LinearLayout
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_below="@id/lock"
            android:id="@+id/ll_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvEnterPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Set Password"
                android:textColor="@color/themeColor"
                android:gravity="center"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter 4 digit numbers"
                android:gravity="center"
                android:textColor="@color/themeColor"
                android:textSize="@dimen/_10sdp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_20sdp"
                android:layout_gravity="center">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/etPass1"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:background="@drawable/grey_pswd"
                    android:textColorHint="@color/white"
                    android:gravity="center_horizontal" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/etPass2"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:background="@drawable/grey_pswd"
                    android:textColorHint="@color/white"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/etPass3"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:gravity="center_horizontal"
                    android:background="@drawable/grey_pswd"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/etPass4"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:gravity="center_horizontal"
                    android:background="@drawable/grey_pswd"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="3.0">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0">

                        <TextView
                            android:id="@+id/anti_theft_t9_key_1"
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="@string/number_one"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_18sdp"
                            android:textIsSelectable="false" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0">

                        <TextView
                            android:id="@+id/anti_theft_t9_key_2"
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="@string/number_two"
                            android:textIsSelectable="false"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="@dimen/_18sdp"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0">

                        <TextView
                            android:id="@+id/anti_theft_t9_key_3"
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="@string/number_three"
                            android:textIsSelectable="false"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="@dimen/_18sdp" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:gravity="center"
                    android:showDividers="middle">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0">

                        <TextView
                            android:id="@+id/anti_theft_t9_key_4"
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="@string/number_four"
                            android:textColor="@color/black"
                            android:textIsSelectable="false"
                            android:textStyle="bold"
                            android:textSize="@dimen/_18sdp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0">

                        <TextView
                            android:id="@+id/anti_theft_t9_key_5"
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="@string/number_five"
                            android:textColor="@color/black"
                            android:textIsSelectable="false"
                            android:textStyle="bold"
                            android:textSize="@dimen/_18sdp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0">

                        <TextView
                            android:id="@+id/anti_theft_t9_key_6"
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="@string/number_six"
                            android:textColor="@color/black"
                            android:textIsSelectable="false"
                            android:textStyle="bold"
                            android:textSize="@dimen/_18sdp" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:gravity="center"
                    android:showDividers="middle">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0">

                        <TextView
                            android:id="@+id/anti_theft_t9_key_7"
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="@string/number_seven"
                            android:textColor="@color/black"
                            android:textIsSelectable="false"
                            android:textStyle="bold"
                            android:textSize="@dimen/_18sdp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0">

                        <TextView
                            android:id="@+id/anti_theft_t9_key_8"
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="@string/number_eight"
                            android:textColor="@color/black"
                            android:textIsSelectable="false"
                            android:textStyle="bold"
                            android:textSize="@dimen/_18sdp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0">

                        <TextView
                            android:id="@+id/anti_theft_t9_key_9"
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="@string/number_nine"
                            android:textColor="@color/black"
                            android:textIsSelectable="false"
                            android:textStyle="bold"
                            android:textSize="@dimen/_18sdp" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:gravity="center"
                    android:showDividers="middle">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.1">

                        <TextView
                            android:id="@+id/anti_theft_t9_key_0"
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_centerInParent="true"
                            android:text="@string/number_zero"
                            android:textColor="@color/black"
                            android:textIsSelectable="false"
                            android:textStyle="bold"
                            android:textSize="@dimen/_18sdp" />

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/anti_theft_t9_key_backspace"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:layout_alignParentRight="true"
                        android:layout_weight="0.6"
                        android:gravity="right"
                        android:padding="@dimen/_7sdp"
                       app:srcCompat="@drawable/ic_back_1"
