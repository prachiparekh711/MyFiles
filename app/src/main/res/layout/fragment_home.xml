<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:scatter="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="myfiles.adfree.filemanager.esfilexplorer.managefileslocally.FragmentIntro.HomeFragment">

    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/rl_topLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_8sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            app:cardElevation="@dimen/_3sdp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text2"
                    android:textSize="@dimen/_12sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:text="Storage Detail"
                    android:textColor="@color/black"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_below="@id/text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:weightSum="2.0">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <com.intrusoft.scatter.PieChart
                            android:id="@+id/piechart1"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_100sdp"
                            scatter:centerColor="@color/white"
                            scatter:chartColor="@color/transparent"
                            scatter:equalPartition="false"
                            scatter:textColor="@color/textColor" />

                        <LinearLayout
                            android:visibility="visible"
                            android:id="@+id/layer1"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Internal Storage"
                                />

                            <LinearLayout
                                android:layout_gravity="center_horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/txtFree1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="81.75 GB"
                                    android:textColor="@color/themeColor"
                                    />

                                <TextView
                                    android:id="@+id/txtTotal1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="/115.09 GB"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:id="@+id/layer3"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Internal Storage"
                            />

                        <LinearLayout
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/txtFree3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="81.75 GB"
                                android:textColor="@color/themeColor"
                                />

                            <TextView
                                android:id="@+id/txtTotal3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="/115.09 GB"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:visibility="visible"
                        android:id="@+id/layer2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <com.intrusoft.scatter.PieChart
                            android:id="@+id/piechart2"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_100sdp"
                            scatter:centerColor="@color/white"
                            scatter:chartColor="@color/transparent"
                            scatter:equalPartition="false"
                            scatter:textColor="@color/textColor" />

                         <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SD Card"
                            android:layout_gravity="center_horizontal"/>

                        <LinearLayout
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/txtFree2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="81.75 GB"
                                android:textColor="@color/themeColor"
                                />

                            <TextView
                                android:id="@+id/txtTotal2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="/115.09 GB"
                                />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>


        <RelativeLayout
            android:layout_below="@id/rl_topLay"
            android:id="@+id/rl_middleLay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:layout_marginTop="@dimen/_5sdp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                app:cardElevation="@dimen/_3sdp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text1"
                    android:textSize="@dimen/_12sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:text="File Categories"
                    android:textColor="@color/black"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_below="@id/text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:weightSum="2.0">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1.0"
                        android:layout_height="0dp"
                        android:weightSum="4.0">

                        <LinearLayout
                            android:id="@+id/ll_image"
                            android:layout_width="0dp"
                            android:layout_weight="1.0"
                            android:weightSum="0.5"
                            android:orientation="vertical"
                            android:layout_marginLeft="@dimen/_7sdp"
                            android:layout_marginRight="@dimen/_7sdp"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.4"
                               app:srcCompat="@drawable/image"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.1"
                                android:text="Images"
                                android:gravity="center|top"
                                android:textSize="@dimen/_8sdp"
                                android:textColor="@color/black"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_vidoes"
                            android:layout_width="0dp"
                            android:layout_weight="1.0"
                            android:weightSum="0.5"
                            android:orientation="vertical"
                            android:layout_marginLeft="@dimen/_7sdp"
                            android:layout_marginRight="@dimen/_7sdp"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.4"
                               app:srcCompat="@drawable/video"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.1"
                                android:text="Videos"
                                android:gravity="center|top"
                                android:textSize="@dimen/_8sdp"
                                android:textColor="@color/black"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_audios"
                            android:layout_width="0dp"
                            android:layout_weight="1.0"
                            android:weightSum="0.5"
                            android:orientation="vertical"
                            android:layout_marginLeft="@dimen/_7sdp"
                            android:layout_marginRight="@dimen/_7sdp"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.4"
                               app:srcCompat="@drawable/music"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.1"
                                android:text="Music"
                                android:gravity="center|top"
                                android:textSize="@dimen/_8sdp"
                                android:textColor="@color/black"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_zipFiles"
                            android:layout_width="0dp"
                            android:layout_weight="1.0"
                            android:weightSum="0.5"
                            android:orientation="vertical"
                            android:layout_marginLeft="@dimen/_7sdp"
                            android:layout_marginRight="@dimen/_7sdp"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.4"
                               app:srcCompat="@drawable/folders"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.1"
                                android:text="Zip Files"
                                android:gravity="center|top"
                                android:textSize="@dimen/_8sdp"
                                android:textColor="@color/black"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1.0"
                        android:layout_height="0dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_3sdp"
                        android:weightSum="4.0">

                        <LinearLayout
                            android:id="@+id/ll_Apps"
                            android:layout_width="0dp"
                            android:layout_weight="1.0"
                            android:weightSum="0.5"
                            android:orientation="vertical"
                            android:layout_marginLeft="@dimen/_7sdp"
                            android:layout_marginRight="@dimen/_7sdp"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.4"
                               app:srcCompat="@drawable/apps"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.1"
                                android:text="Apps"
                                android:gravity="center|top"
                                android:textSize="@dimen/_8sdp"
                                android:textColor="@color/black"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_document"
                            android:layout_width="0dp"
                            android:layout_weight="1.0"
                            android:weightSum="0.5"
                            android:orientation="vertical"
                            android:layout_marginLeft="@dimen/_7sdp"
                            android:layout_marginRight="@dimen/_7sdp"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.4"
                               app:srcCompat="@drawable/documents"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.1"
                                android:text="Documents"
                                android:gravity="center|top"
                                android:textSize="@dimen/_8sdp"
                                android:textColor="@color/black"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_trash"
                            android:layout_width="0dp"
                            android:layout_weight="1.0"
                            android:weightSum="0.5"
                            android:orientation="vertical"
                            android:layout_marginLeft="@dimen/_7sdp"
                            android:layout_marginRight="@dimen/_7sdp"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.4"
                               app:srcCompat="@drawable/trash"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.1"
                                android:text="Trash Bin"
                                android:gravity="center|top"
                                android:textSize="@dimen/_8sdp"
                                android:textColor="@color/black"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_download"
                            android:layout_width="0dp"
                            android:layout_weight="1.0"
                            android:weightSum="0.5"
                            android:orientation="vertical"
                            android:layout_marginLeft="@dimen/_7sdp"
                            android:layout_marginRight="@dimen/_7sdp"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.4"
                               app:srcCompat="@drawable/download"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.1"
                                android:text="Download"
                                android:gravity="center|top"
                                android:textSize="@dimen/_8sdp"
                                android:textColor="@color/black"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_below="@+id/rl_middleLay"
            android:layout_marginTop="@dimen/_15sdp">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardElevation="@dimen/_3sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:weightSum="2.0">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_12sdp"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:text="Recent Files"
                            android:textColor="@color/black"
                            android:visibility="visible" />


                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_recent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:clipToPadding="false"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        app:layout_behavior="@string/appbar_scrolling_view_behavior"
                        app:spanCount="4"
                        android:visibility="gone"
                        tools:listitem="@layout/item_recent" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="@dimen/_30sdp"
                        android:id="@+id/mRecentNull"
                        scatter:srcCompat="@drawable/ic_frame_recent"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>


    <RelativeLayout
        android:layout_gravity="center"
        android:id="@+id/rl_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/directory"
        android:visibility="gone">

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/avi"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_centerInParent="true"
            app:indicatorColor="@color/themeColor"
            app:indicatorName="BallClipRotateIndicator" />

    </RelativeLayout>

</RelativeLayout>