<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/video_gradient"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl2"
        android:background="@drawable/video_gradient"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <VideoView
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/video_gradient"
            android:layout_centerInParent="true"
            android:id="@+id/mVideo"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            />


        <ImageView
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:id="@+id/mRotate"
            android:tint="@color/white"
           app:srcCompat="@drawable/rotate"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bootomRL"
        android:background="@drawable/video_gradient"
        android:paddingTop="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <RelativeLayout
                android:layout_marginTop="@dimen/_15sdp"
                android:id="@+id/rl1"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/startTime"/>

                <androidx.appcompat.widget.AppCompatSeekBar
                    style="@style/AppThemeTwo"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="@dimen/_35sdp"
                    android:layout_height="wrap_content"
                    android:id="@+id/seekBar"
                    android:thumbTint="@color/white"/>

                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    android:text="00:00"
                    android:id="@+id/endTime"/>

            </RelativeLayout>

            <LinearLayout
                android:weightSum="5"
                android:layout_marginVertical="@dimen/_20sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_below="@id/rl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_weight="1"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/mBack10"
                    android:tint="@color/white"
                   app:srcCompat="@drawable/back10"/>

                <ImageView
                    android:layout_weight="1"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_vertical"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:id="@+id/mPlayBack"
                    android:tint="@color/white"
                   app:srcCompat="@drawable/next1"/>

                <ImageView
                    android:layout_weight="1"
                    android:layout_centerHorizontal="true"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:id="@+id/mPlay"
                    android:tint="@color/white"
                   app:srcCompat="@drawable/play"/>

                <ImageView
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:layout_centerHorizontal="true"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:id="@+id/mPause"
                    android:tint="@color/white"
                   app:srcCompat="@drawable/pause"/>

                <ImageView
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:id="@+id/mPlayforward"
                    android:tint="@color/white"
                   app:srcCompat="@drawable/next2"/>

                <ImageView
                    android:layout_weight="1"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/mForward10"
                    android:tint="@color/white"
                   app:srcCompat="@drawable/forward10"/>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>